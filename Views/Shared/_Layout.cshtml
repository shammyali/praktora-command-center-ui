
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - P²RA Command Center</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="layout-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <img src="~/img/praktora-logo.png" alt="Praktora Logo" class="logo" />
            </div>
            <div class="sidebar-content">
                <nav>
                    <ul class="nav-list">
                        <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")">
                            <a asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i>
                                <span>Home</span>
                            </a>
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "CommandCenter" ? "active" : "")">
                            <a asp-controller="CommandCenter" asp-action="Index">
                                <i class="bi bi-terminal"></i>
                                <span>Command Center</span>
                            </a>
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Documents" ? "active" : "")">
                            <a asp-controller="Documents" asp-action="Index">
                                <i class="bi bi-file-earmark-text"></i>
                                <span>Documents Hub</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#">
                                <i class="bi bi-briefcase"></i>
                                <span>Workflows</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#">
                                <i class="bi bi-people"></i>
                                <span>Clients</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#">
                                <i class="bi bi-gear"></i>
                                <span>Settings</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="sidebar-footer">
                <div class="user-info">
                    <img src="~/img/avatar.png" alt="User Avatar" class="avatar" />
                    <div>
                        <div class="user-name">John Doe</div>
                        <div class="user-role">Insurance Agent</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <header class="main-header">
                <div class="header-container">
                    <h1>P²RA: Intelligence in Motion</h1>
                    <p>@ViewData["Subtitle"]</p>
                </div>
                <div class="header-actions">
                    <span class="status-indicator">P²RA Status: <span class="status-online">Online</span></span>
                    <button class="icon-button"><i class="bi bi-moon"></i></button>
                    <button class="icon-button"><i class="bi bi-bell"></i></button>
                    <a href="#" class="icon-button"><i class="bi bi-box-arrow-up-right"></i></a>
                </div>
            </header>

            <!-- Page Content -->
            <div class="container-fluid p-0">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
