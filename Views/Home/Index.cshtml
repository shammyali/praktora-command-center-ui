
@{
    ViewData["Title"] = "Home";
    ViewData["Subtitle"] = "Command Console";
}

<div class="welcome-container">
    <div class="welcome-card">
        <div class="welcome-header">
            <h2>Welcome to Praktora P²RA</h2>
            <p>Insurance Process & Risk Assistant</p>
        </div>
        <div class="welcome-body">
            <p>P²RA is your intelligent assistant designed to streamline insurance workflows, analyze risks, and provide data-driven insights. Start by accessing the command center or manage your documents.</p>
            <div class="welcome-actions">
                <a asp-controller="CommandCenter" asp-action="Index" class="btn btn-primary">Command Center</a>
                <a asp-controller="Documents" asp-action="Index" class="btn btn-outline-secondary">Manage Documents</a>
            </div>
        </div>
    </div>
    
    <div class="command-center-container">
        <partial name="_CommandCenterPreview" />
    </div>
</div>

@section Scripts {
    <script src="~/js/home.js"></script>
}
